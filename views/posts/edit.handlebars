           <p class="text-center text-white">Log out <i class="fa fa-arrow-right"></i></p>

       
        </div>
         <div class="col-lg-9 text-center">
          
<div class="container my-4">
    <h5 class="text-center my-3">Edit Post</h5>
    <form action="/post/{{post._id}}?_method=PUT" enctype="multipart/form-data" method="POST">
  <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
        <label for="title my-4">Post title</label>
        <input type="text" name="title" class="form-control" value="{{post.title}}">
    </div>

     <div class="form-group">
     <input type="file"  name="image" accept="image/jpg, image/jpeg, image/png" onchange="loadFile(event)" id="put" multiple="multiple" value="{{post.image}}">
   <br> <br><img id="output"/>
   <p class="text center " id="times">Remove file</p>
    </div>
    <div class="form-group">
        <label for="details my-4">Post details</label>
        <textarea name="details" class="form-control" rows="10">{{post.details}}</textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-danger">Update</button>
    </div>
    </form>
</div>
        </div>
    </div>
</div>

