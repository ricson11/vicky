<div class="containe-fluidr">
    <div class="row">
        <div class="col-lg-3 bg-danger">
          <div class="container">
             <form action="/">
            <div class="input-group">
                <input type="search" class="form-control" placeholder="search..." id="admin-search">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </div>
