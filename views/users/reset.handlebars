{{>_header}}
 {{>_msg}}
<div class="container my-4" id="login-content">
    <h5 class="text-center my-3">Admin Password Reset</h5>
<form action="/admin/reset/{{token}}" method="POST">
 
 <div class="form-group">
     <label for="password">New Password</label>
     <input type="password" name="password" class="form-control" id="passer" placeholder="Enter new password..." >
 </div>

<div class="form-group">
     <label for="password">Confirm Password</label>
     <input type="password" name="password2" class="form-control" id="passer" placeholder="Confirm password..." >
 </div>

 <div class="form-group">
     <button class="btn btn-danger">Reset Password</button>
 </div>
</form>
<div class="container d-flex justify-content-around ">
    <a class=" text-white" href="/admin/login">Login</a>
       <a class="text-white" href="/admin/signup">Signup</a>
</div>
</div>

